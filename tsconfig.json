{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,

    /* Language and Environment */
    "target": "es2016", 
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "skipLibCheck": true
  }
}
